extends layout

mixin product(id, title, value, image)
    img(src=imgSource alt="err" style='width:250px; height:400px; object-fit: contain;')
    h3=title
    div
        parseFloat(price).toFixed(2) + "zł" 

block content
    h2 Zamówienie
        each product in products
            +product(product.id, product.title, product.value, product.image)
    br
    "Całkowita cena: " parseFloat(order.sumValue).toFixed(2)" zł"
    "Data zakupy: " order.time